# Email Service Configuration

# Service Configuration
PORT=8017
ENVIRONMENT=development

# Email Mode (simulation or production)
SIMULATE_EMAIL=true

# SendGrid Configuration (Production)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@tripo04os.com
SENDGRID_FROM_NAME=Tripo04OS

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tripo04os_email
REDIS_URL=redis://localhost:6379/0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_EMAIL=email_events

# Rate Limiting
EMAIL_RATE_LIMIT_PER_MINUTE=10
EMAIL_RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=info

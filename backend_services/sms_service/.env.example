# SMS Service Configuration

# Service Configuration
PORT=8016
ENVIRONMENT=development

# SMS Mode (simulation or production)
SIMULATE_SMS=true

# Twilio Configuration (Production)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tripo04os_sms
REDIS_URL=redis://localhost:6379/0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_SMS=sms_events

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5

# Rate Limiting
SMS_RATE_LIMIT_PER_MINUTE=10
SMS_RATE_LIMIT_PER_HOUR=50

# Logging
LOG_LEVEL=info
SMS_LOG_FILE=sms_logs.json

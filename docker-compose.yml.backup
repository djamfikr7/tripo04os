version: '3.8'

services:
  identity-service:
    build:
      context: ./backend_services/identity_service
      dockerfile: Dockerfile
    container_name: tripo04os-identity-service
    ports:
      - "8001:8000"
    environment:
      - ENVIRONMENT=development
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_USER=tripo04os
      - DB_PASSWORD=tripo04os123
      - DB_NAME=tripo04os_identity
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - JWT_SECRET=your-super-secret-jwt-key-change-in-production
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    networks:
      - tripo04os-network
    restart: unless-stopped

  location-service:
    build:
      context: ./backend_services/location_service
      dockerfile: Dockerfile
    container_name: tripo04os-location-service
    ports:
      - "8002:8002"
    environment:
      - ENVIRONMENT=development
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_USER=tripo04os
      - DB_PASSWORD=tripo04os123
      - DB_NAME=tripo04os_location
      - JWT_SECRET=your-super-secret-jwt-key-change-in-production
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - tripo04os-network
    restart: unless-stopped

  postgres:
    image: postgres:15-alpine
    container_name: tripo04os-postgres
    environment:
      - POSTGRES_USER=tripo04os
      - POSTGRES_PASSWORD=tripo04os123
      - POSTGRES_MULTIPLE_DATABASES=tripo04os_identity,tripo04os_order,tripo04os_trip,tripo04os_location,tripo04os_pricing,tripo04os_communication,tripo04os_safety,tripo04os_reputation,tripo04os_fraud,tripo04os_subscription,tripo04os_analytics
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./databases/schemas/init.sql:/docker-entrypoint-initdb.d/init.sql
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U tripo04os"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - tripo04os-network
    restart: unless-stopped

  redis:
    image: redis:7-alpine
    container_name: tripo04os-redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 3s
      retries: 5
    networks:
      - tripo04os-network
    restart: unless-stopped

  zookeeper:
    image: confluentinc/cp-zookeeper:7.5.0
    container_name: tripo04os-zookeeper
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    ports:
      - "2181:2181"
    volumes:
      - zookeeper_data:/var/lib/zookeeper/data
      - zookeeper_logs:/var/lib/zookeeper/log
    networks:
      - tripo04os-network
    restart: unless-stopped

  kafka:
    image: confluentinc/cp-kafka:7.5.0
    container_name: tripo04os-kafka
    depends_on:
      - zookeeper
    ports:
      - "9092:9092"
      - "29092:29092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: true
    volumes:
      - kafka_data:/var/lib/kafka/data
    networks:
      - tripo04os-network
    restart: unless-stopped

  prometheus:
    image: prom/prometheus:latest
    container_name: tripo04os-prometheus
    ports:
      - "9090:9090"
    volumes:
      - ./infrastructure/monitoring/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus_data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
    networks:
      - tripo04os-network
    restart: unless-stopped

  grafana:
    image: grafana/grafana:latest
    container_name: tripo04os-grafana
    ports:
      - "3000:3000"
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=admin
      - GF_USERS_ALLOW_SIGN_UP=false
    volumes:
      - grafana_data:/var/lib/grafana
      - ./infrastructure/monitoring/grafana/provisioning:/etc/grafana/provisioning
    networks:
      - tripo04os-network
    restart: unless-stopped

volumes:
  postgres_data:
  redis_data:
  zookeeper_data:
  zookeeper_logs:
  kafka_data:
  prometheus_data:
  grafana_data:

networks:
  tripo04os-network:
    driver: bridge

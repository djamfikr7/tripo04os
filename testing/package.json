{
  "name": "tripo04os-testing",
  "version": "1.0.0",
  "description": "Testing framework for Tripo04OS",
  "scripts": {
    "install": "npm install && pip install -r requirements.txt",
    "clean": "rm -rf reports/* && rm -rf .pytest_cache && rm -rf node_modules/.cache",
    "setup": "docker-compose up -d && sleep 30",
    "teardown": "docker-compose down -v",
    "restart": "npm run teardown && npm run setup",
    "test:e2e": "npm run test:e2e:all",
    "test:e2e:all": "cypress run --e2e --config cypress.config.js",
    "test:e2e:order": "cypress run --spec e2e/suites/order-flow.cy.js",
    "test:e2e:trip": "cypress run --spec e2e/suites/trip-flow.cy.js",
    "test:e2e:payment": "cypress run --spec e2e/suites/payment-flow.cy.js",
    "test:performance": "k6 run performance/scenarios/api-benchmark.js",
    "test:performance:all": "npm run test:performance:api && npm run test:performance:database",
    "test:security": "npm run test:security:zap && npm run test:security:dependency",
    "test:security:zap": "docker-compose -f security/zap-docker.yml run",
    "test:security:dependency": "snyk test --json > security/reports/dependency-scan.json",
    "test:load": "k6 run load/scenarios/ramp-up-test.js",
    "test:load:spike": "k6 run load/scenarios/spike-test.js",
    "test:load:all": "npm run test:load && npm run test:load:spike",
    "report": "npm run report:e2e && npm run report:performance && npm run report:security && npm run report:load",
    "report:e2e": "node scripts/generate-e2e-report.js",
    "report:performance": "python scripts/generate-performance-report.py",
    "report:security": "python scripts/generate-security-report.py",
    "report:load": "python scripts/generate-load-report.py",
    "fixtures:seed": "python scripts/seed-test-data.py"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "cypress": "^13.6.0",
    "cypress-mochawesome-reporter": "^3.2.3",
    "k6": "^0.46.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "supertest": "^6.3.0"
  }
}

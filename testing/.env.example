# Test Environment Configuration

# Test Mode
TEST_ENV=development
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=3

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/tripo04os_test
TEST_REDIS_URL=redis://localhost:6380/1
TEST_KAFKA_BROKERS=localhost:9093

# Service Test Ports (offset by +20 to avoid conflicts)
IDENTITY_SERVICE_PORT=8020
ORDER_SERVICE_PORT=8021
TRIP_SERVICE_PORT=8023
MATCHING_SERVICE_PORT=8025
PRICING_SERVICE_PORT=8026
PAYMENT_SERVICE_PORT=8033
MAPS_SERVICE_PORT=8034
NOTIFICATION_SERVICE_PORT=8035
SMS_SERVICE_PORT=8036
EMAIL_SERVICE_PORT=8037

# Mock Services
MOCK_STRIPE_KEY=sk_test_mock
MOCK_STRIPE_WEBHOOK_SECRET=whsec_mock
MOCK_SENDGRID_API_KEY=SG.mock
MOCK_TWILIO_ACCOUNT_SID=AC.mock
MOCK_TWILIO_AUTH_TOKEN=mock_token
MOCK_FIREBASE_PROJECT_ID=mock-project

# Test Data
TEST_RIDER_COUNT=50
TEST_DRIVER_COUNT=10
TEST_ORDER_COUNT=100
TEST_VEHICLE_COUNT=20

# Load Testing
LOAD_TEST_USERS=500
LOAD_TEST_DURATION=600
LOAD_TEST_RAMP_UP=60
LOAD_TEST_MAX_VUS=1000

# Performance Thresholds (milliseconds)
API_RESPONSE_TIME_P95_MS=500
API_RESPONSE_TIME_P99_MS=1000
DB_QUERY_TIME_P95_MS=100
MESSAGE_QUEUE_DEPTH_MAX=1000

# Security Testing
SECURITY_SCAN_TARGET=http://localhost:8020
SECURITY_SCAN_OUTPUT_DIR=./security/reports
SECURITY_SCAN_LEVEL=high

# Reporting
REPORT_DIR=./reports
REPORT_FORMAT=json
REPORT_INCLUDE_SCREENSHOTS=true

# External Service Simulation
SIMULATE_SMS=true
SIMULATE_EMAIL=true
SIMULATE_PAYMENTS=false

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
